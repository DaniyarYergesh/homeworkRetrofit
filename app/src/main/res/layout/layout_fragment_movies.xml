<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/fragment_fragment3__main_scene"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/main_menu"
        app:title="Qyzyqty kontent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/izdey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_input_layout_shape"
            android:textAppearance="@style/currencyStyle" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/maxresdefault_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textInputLayout" />

    <View
        android:id="@+id/player"
        android:layout_width="391dp"
        android:layout_height="57dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bottom_sheet_style"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <ImageView
        android:id="@+id/pause"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/group_48"
        app:layout_constraintStart_toStartOf="@id/player"
        app:layout_constraintTop_toTopOf="@id/player" />

    <TextView
        android:id="@+id/nameOfMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="Qazaqsha podkast"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/pause"
        app:layout_constraintTop_toTopOf="@id/player" />


    <View
        android:id="@+id/duration"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="@id/pause"
        app:layout_constraintEnd_toStartOf="@id/time"
        app:layout_constraintStart_toEndOf="@id/pause" />

    <View
        android:id="@+id/view4"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/sharik"
        app:layout_constraintBottom_toBottomOf="@id/duration"
        app:layout_constraintStart_toStartOf="@id/duration"
        app:layout_constraintTop_toTopOf="@id/duration" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08:43 - 12:00"
        app:layout_constraintBottom_toBottomOf="@id/duration"
        app:layout_constraintEnd_toEndOf="@id/player"
        app:layout_constraintLeft_toLeftOf="@id/player" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/maxresdefault_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player" />


</androidx.constraintlayout.motion.widget.MotionLayout>